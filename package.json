{
  "_comment": [
    "Summary: Root npm manifest orchestrating the Tanks for Nothing monorepo workspaces.",
    "Structure: Declares workspace layout, repository-level scripts, and shared development tooling versions.",
    "Usage: Run 'npm install' once, then use scripts such as 'npm run build' to operate across all workspaces."
  ],
  "name": "tanksfornothing",
  "version": "1.0.0",
  "description": "Blocky multiplayer tank game",
  "private": true,
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces --if-present",
    "start": "npm run start --workspace @tanksfornothing/server",
    "setup": "npm run setup --workspace @tanksfornothing/server",
    "import-wt": "npm run import-wt --workspace @tanksfornothing/server"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.2"
  }
}
